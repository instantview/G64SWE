using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using XuMinghui;
using System.Collections;

namespace ForExercise
{
    class Program
    {
        static void Main()
        {
            //create new account and set money in it
            NewAccount player = new NewAccount();
            player.Deposit(10000);
            //create the two list of gold: one for the prices in 5 planets, the other for the amount in 5 planets
            Items gold = new Items();
            gold.SetMinPrice(40);
            gold.SetMaxPrice(50);
            gold.SetPrice();
            //create silver as above
            Items silver = new Items();
            silver.SetMinPrice(15);
            silver.SetMaxPrice(30);
            silver.SetPrice();
            //create silver as above
            Items copper = new Items();
            copper.SetMinPrice(5);
            copper.SetMaxPrice(10);
            copper.SetPrice();
            //show the list of these three items
            Console.WriteLine("goldprice " + gold.PlantPrice[0] + " " + gold.PlantPrice[1] + " " + gold.PlantPrice[2] + " " + gold.PlantPrice[3] + " " + gold.PlantPrice[4]);
            Console.WriteLine("goldamount " + gold.PlantAmount[0] + " " + gold.PlantAmount[1] + " " + gold.PlantAmount[2] + " " + gold.PlantAmount[3] + " " + gold.PlantAmount[4]);
            Console.WriteLine("silverprice " + silver.PlantPrice[0] + " " + silver.PlantPrice[1] + " " + silver.PlantPrice[2] + " " + silver.PlantPrice[3] + " " + silver.PlantPrice[4]);
            Console.WriteLine("silveramount " + silver.PlantAmount[0] + " " + silver.PlantAmount[1] + " " + silver.PlantAmount[2] + " " + silver.PlantAmount[3] + " " + silver.PlantAmount[4]);
            Console.WriteLine("copperprice " + copper.PlantPrice[0] + " " + copper.PlantPrice[1] + " " + copper.PlantPrice[2] + " " + copper.PlantPrice[3] + " " + copper.PlantPrice[4]);
            Console.WriteLine("copperamount " + copper.PlantAmount[0] + " " + copper.PlantAmount[1] + " " + copper.PlantAmount[2] + " " + copper.PlantAmount[3] + " " + copper.PlantAmount[4]);
            //buy 5 gold from plant2 (Parameter should be "1" because the lists starts from "0")
            Console.WriteLine("player's balance " + player.Balance);
            Console.WriteLine("planet2 gold price "+gold.PlantPrice[1]+" amount "+gold.PlantAmount[1]);
            gold.Buy(1, 5);//first is the number of planet,second is how much we buy
            player.BuyGold((int)gold.PlantPrice[1], 5);//first is price,second is amount
            player.GetEvaGoldPrice();//evarage price and current amount
            Console.WriteLine("player's goldeva " + player.evaGoldPrice+"gold amount "+player.curGoldAmount);
            Console.WriteLine("planet2 gold price " + gold.PlantPrice[1] + " amount " + gold.PlantAmount[1]);
            Console.WriteLine("player's balance " + player.Balance);
            //buy 10 gold from plant4 and 7 gold from plant5
            gold.Buy(3, 10);
            player.BuyGold((int)gold.PlantPrice[3], 10);
            gold.Buy(4, 7);
            player.BuyGold((int)gold.PlantPrice[4], 7);
            player.GetEvaGoldPrice();
            Console.WriteLine("player's balance " + player.Balance);
            Console.WriteLine("player's goldeva " + player.evaGoldPrice + "gold amount " + player.curGoldAmount);
            Console.WriteLine("planet2 gold price " + gold.PlantPrice[1] + " amount " + gold.PlantAmount[1]);
            Console.WriteLine("planet4 gold price " + gold.PlantPrice[3] + " amount " + gold.PlantAmount[3]);
            Console.WriteLine("planet5 gold price " + gold.PlantPrice[4] + " amount " + gold.PlantAmount[4]);
            Console.ReadKey();
        }
    }
}
